extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign up
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-4.col-form-label.font-weight-bold.text-right(for='email') Email
      .col-md-5
        input.form-control(type='email', name='email', id='email', placeholder='e-mail', autofocus, autocomplete='email', required)
    .form-group.row
      label.col-md-4.col-form-label.font-weight-bold.text-right(for='name') Name
      .col-md-5
        input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus, autocomplete='name', required)
    .form-group.row
      label.col-md-4.col-form-label.font-weight-bold.text-right(for='tgi') TGI
      .col-md-5
        input.form-control(type='text', name='tgi', id='tgi', placeholder='TGI', autofocus, autocomplete='tgi', required)
    .form-group.row
      label.col-md-4.col-form-label.font-weight-bold.text-right(for='area') Area
      .col-md-5
        select#sel1.form-control(form='signup-form', name='area' style='height:40px;')
          option(value='0', selected= true) -- Select --
          option(value='SE' ) SE
          option(value='DEV' ) DEV
          option(value='IVVQ' ) IVVQ  
          option(value='ATM' ) ATM  
    .form-group.row
      label.col-md-4.col-form-label.font-weight-bold.text-right(for='password') Password
      .col-md-5
        input.form-control(type='password', name='password', id='password', placeholder='Password', autocomplete='new-password', minlength='8', required)
    .form-group.row
      label.col-md-4.col-form-label.font-weight-bold.text-right(for='confirmPassword') Confirm Password
      .col-md-5
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', autocomplete='new-password', minlength='8', required)
    .form-group
      .offset-md-4.col-md-5.pl-2
        button.btn.btn-success(type='submit')
          i.fas.fa-user-plus.fa-sm
          | Signup
