extends layout

block content
  h1 WorkLoad App 👨‍💻
  p.lead An app to keep track of time in projects
  hr
  if !user
    .row
      .col-md-6
        h2 Instructions
        p Please first login to the app in order to load work hours.
  else
    .row
      .col-md-12
        h2 Welcome!
        p Please select an option:
        p
          a.btn.btn-raised(href='/loadworks', role='button') Load Work »
        p
          a.btn.btn-raised(href='/workloads', role='button') List Workloads »
        p
          a.btn.btn-raised(href='/workloads', role='button') Show Catalogs »